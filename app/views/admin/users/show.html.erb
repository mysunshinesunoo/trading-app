<div class="container mx-auto my-8">
  <h1 class="text-3xl font-bold mb-4">User Details</h1>
  <div class="flex justify-between items-center mb-4">
    <%=link_to "Back", admin_users_path, class: "text-blue-500 hover:text-blue-700" %>
  </div>
  <hr class="my-4">
  <div class="bg-white shadow-md rounded-lg p-4">
    <p class="text-gray-700 font-medium mb-2">Email: <%= @user.email %></p>
    <p class="text-gray-700 font-medium mb-2">Name: <%= @user.name %></p>
    <p class="text-gray-700 font-medium mb-4">Balance: <%= @user.balance %></p>
    <div class="flex justify-end space-x-4">
      <%= link_to "Edit", edit_admin_user_path(@user), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Delete User", admin_user_path(@user), data: {
        turbo_method: :delete, turbo_confirm: "Delete user?"
      }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>
</div>